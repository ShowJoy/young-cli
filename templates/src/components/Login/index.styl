@import 'src/app';

.component-login-container
  position relative
  display inline-block
  .sub-title
    text-align center
    color #9399a5
    font-size 24rpx
    margin-bottom 52rpx
    margin-top 66rpx

  image
    width 630rpx
    height 100rpx
  .line.phone
    margin-top 40rpx

  .left-line, .right-line
    position absolute
    top 15rpx
    width 240rpx
    height 1rpx
    background-color #e4e6f0
  .right-line
    right 50rpx
 
.wx-container
  position relative

.wxLogin
  position relative
  height 100rpx

.get-phone
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity 0
  background black

/* bg-layer */
.bg-layer
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  opacity 0.6
  background-color white
  z-index 5
/* login 弹窗 */
.login-dialog
  position absolute
  padding 90rpx 40rpx
  top 0
  bottom 0
  left 0
  right 0
  background white
  z-index 10

  .close-dialog
    position absolute
    bottom 80rpx
    left 0
    right 0
    display flex
    justify-content center

  .title
    display block
    font-size 56rpx
    margin-bottom 80rpx

  .input-phone-container
    Borders('bottom')
    font-size 32rpx
    display flex
    justify-content space-between
    align-items center
    .btn-code
      color $color-font-gray

  .input
    color $color-font-black
    padding 30rpx 0

  .input-code-container
    Borders('bottom')

  .login-btn
    margin-top 60rpx

.close
  display none

/* pic code */
.pic-dialog
  display block
  position fixed
  top 0
  left 0
  width 750rpx
  background-color rgba(0, 0, 0,.6)
  height 100%
  z-index 15

  .picCode-input
    width 228rpx
    font-size 24rpx
    padding-left 16rpx
    height 72rpx
    border 1rpx solid #e4e6f0
    border-radius 4rpx

  .picCode-container
    position relative
    top 34.6%
    margin 0 auto
    width 488rpx
    border-radius 4rpx
    background-color #fff

  .pic-code-img
    margin-left 20rpx
    width 160rpx
    height 72rpx

  .picCode-btn-group
    width 100%
    display flex
    align-items center
    font-size 26rpx
    .btn
      color #3072f6
      width 50%
      line-height 100rpx
      Borders('top')
    .btn.cancel
      Borders('right')

  .pic-input-container
    width 100%
    display flex
